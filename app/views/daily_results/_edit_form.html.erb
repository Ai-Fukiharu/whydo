<%= form_with(model: daily_result, local: true) do |f| %>
<%= hidden_field_tag :key_result_id, daily_result.key_result.id %>
<%= hidden_field_tag :result_date, daily_result.result_date %>
<%= render 'layouts/error_messages', model: f.object %>


<div class="row">
  <div class="col-sm-5">
    <p>本日の達成度</p>
    <p>(半角数字)</p>
  </div>
  <div class="form-group col-sm-7">
    <%= f.number_field :result, class: 'form-control' %>
  </div>
</div>
<div class="row justify-content-center mb-5">
  <div class="col-4">
    <%= f.submit '評価', class: 'btn btn-primary btn-block' %>
  </div>
</div>
<% end %>